    width: 220rpx;
    height: 80rpx;
    background: #E4F4FE;
    border-radius: 15rpx; 
}
.reservationTime view {
    position: absolute;
    bottom: 5rpx;
    width: 220rpx;
}

.reservationTime .timeImage {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    margin-left: 16rpx;   
}

.reservationTime:nth-child(3n+0) {
    margin-right: 0;
}
.petSelect{
